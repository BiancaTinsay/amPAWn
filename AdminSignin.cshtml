@{
    Layout = "~/Views/Shared/_AdminLogin.cshtml";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f6e4e4;">
    <!-- Content Wrapper -->
    <div style="text-align: center; max-width: 400px; width: 100%;">

        <!-- Image in the Center -->
        <img src="~/Models/pictures/ampawn_logo1.png" alt="Admin Login"
             style="width: 220px; height: auto; margin-bottom: 20px;">

        <!-- Rounded Card -->
        <div style="background: white; border-radius: 22px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
            <form>
                <!-- Email Field -->
                <div style="margin-bottom: 8px;">
                    <input type="email" placeholder="E-mail"
                           style="width: 68%; padding: 8px; font-size: 14px; border: none; border-bottom: 2px solid #ebc6c8; outline: none; background: transparent; color: #333; margin: 0 auto; display: block; font-family: 'Quicksand', sans-serif; font-weight: bold;">
                    <style>
                        input[type="email"]::placeholder {
                            color: #ebc6c8; /* Placeholder color */
                        }
                    </style>
                </div>

                <!-- Password Field -->
                <div style="margin-bottom: 8px; position: relative;">
                    <input type="password" placeholder="Password"
                           style="width: 68%; padding: 8px; font-size: 14px; font-weight: bold; border: none; border-bottom: 2px solid #ebc6c8; outline: none; background: transparent; color: #333; margin: 0 auto; display: block; font-family: 'Quicksand', sans-serif;">
                    <style>
                        input[type="password"]::placeholder {
                            color: #ebc6c8; /* Placeholder color */
                        }
                    </style>
                    <!-- Forgot your Password? -->
                    <a href="#" style="position: absolute; bottom: -20px; right: 35px; font-size: 9px; color: #ebc6c8; text-decoration: none; font-weight: bold;">Forgot your Password?</a>
                </div>

                <!-- Login Button with Increased Space Above -->
                <div>
                    <button type="submit"
                            style="width: 60%; padding: 10px; font-size: 14px; background-color: #2f3543; color: white; border: none; border-radius: 8px; cursor: pointer; margin-top: 30px;">
                        LOG IN
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
